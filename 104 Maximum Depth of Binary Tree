class Solution:
    # DFS two stack, one for TreeNode, the other stores depth
    def maxDepth(self, root: TreeNode) -> int:
        
        maxH = 0
        stack = []
        stack.append(root)
        s_d = [1]
        
        while stack:
            s = stack.pop()
            d = s_d.pop()
            if not s:
                return 0
            
            if s.left and not s.right:
                stack.append(s.left)
                s_d.append(d+1)
                
            elif s.right and not s.left:
                stack.append(s.right)
                s_d.append(d+1)
                
            elif s.left and s.right:
                stack.append(s.right)
                stack.append(s.left)
                s_d.append(d+1)
                s_d.append(d+1)
                
            else:
                if d >= maxH:
                    maxH = d
                
        
        return maxH
